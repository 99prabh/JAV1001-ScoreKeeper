<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Defines the base theme for the ScoreKeeper app, which extends Theme.MaterialComponents.DayNight.DarkActionBar. -->
    <style name="Base.Theme.ScoreKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!-- Sets the primary brand color to a shade of purple. -->
        <item name="colorPrimary">@color/purple_200</item>
        <!-- Sets the variant of the primary brand color to a darker shade of purple. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Sets the color of text and icons on the primary brand color to black. -->
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <!-- Sets the secondary brand color to a shade of teal. -->
        <item name="colorSecondary">@color/teal_200</item>
        <!-- Sets the variant of the secondary brand color to the same shade of teal as the primary brand color. -->
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <!-- Sets the color of text and icons on the secondary brand color to black. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Sets the status bar color to match the text and icons color on the primary brand color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
    </style>
    <!-- Style for the IncreaseButton. -->
    <!-- Inherits from Base.Theme.ScoreKeeper, sets the background color to a success color and text color to white. -->
    <style name="IncreaseButton" parent="Base.Theme.ScoreKeeper">
        <item name="backgroundTint">@color/successColor</item>
        <item name="android:textColor">@color/white</item>
        <item name= "android:textSize">16sp</item>
    </style>
    <!-- Style for DecreaseButton. -->
    <!-- Inherits from Base.Theme.ScoreKeeper, sets the background color to a danger color and text color to white. -->
    <style name="DecreaseButton" parent="Base.Theme.ScoreKeeper">
        <item name="backgroundTint">@color/dangerColor</item>
        <item name="android:textColor">@color/white</item>
        <item name= "android:textSize">16sp</item>
    </style>
    <!-- Style for TextView. -->
    <!-- Inherits from Base.Theme.ScoreKeeper, sets the text color to white. -->
    <style name="TextView" parent="Base.Theme.ScoreKeeper">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
